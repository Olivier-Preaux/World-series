{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>
    <h1 class="mt-0">{{ category.name }} :</h1> 
    
    {% for program in programs %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td><a href="{{ path('program_show', {'id': program.id}) }}">{{ program.title }}</a></td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ program.summary }}</td>
        </tbody>
        
      
     {% else %}
         Aucune série trouvée.
     {% endfor %}
    </table>
    

    <a href="{{ path('category_index') }}">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
