{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
        </tbody>
    </table>

    
    <p><strong>Serie(s) :</strong></p>
     <ul>
            {% for program in programs %}
                <li><a href="{{ path('program_show', { 'slug': program.slug } ) }}">{{ program.title }} </li>
            {% else %}
                <li>Aucun programme pour cet acteur</li>
            {% endfor %}
        </ul>
    <div class='centre'>
    <a href="{{ path('actor_index') }}">Retour Ã  la liste des Acteurs</a></br>

    <a href="{{ path('actor_edit', {'id': actor.id}) }}">Modifier</a>

    {{ include('actor/_delete_form.html.twig') }}
    </div>
{% endblock %}
