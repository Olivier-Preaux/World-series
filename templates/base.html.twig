<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}"/>
		<title>
			{% block title %}{{'Bienvenue !'|trans}}
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>


	<body>

		{% block navbar %}
			<nav class="navbarContainer">
				<div class="navbarBlocks">
									
					<div class="navbarBlock1" >
						<div><h2> WILDSERIES</h2></div>
						<div><a  href="{{ path('program_index') }}">{{'Toutes les séries'|trans}}</a></div>
						<div><a href="{{ path('actor_index') }}">{{'Tous les acteurs'|trans}}</a></div>
					</div>
							
							
						
						
					<div class="navbarBlock2">

						
						
						<div>{% if app.user %}
							{{'Salut '|trans}}{{ app.user.email}}</div>
       							
   								
						<div><a class="aregister" href="{{ path('user_profile', { 'id' : app.user.getId }) }}">
							{{'Mon compte'|trans}}</a></div>
							
						<div><a href="{{ path('app_logout') }}">
							{{'Se déconnecter'|trans}}</a></div>
						{% else %}
						<div><a class="aregister" href="{{ path('app_login') }}">
								{{ 'account.logout'|trans }}</a></div>
						<div><a class="senregistrer" href="{{ path('app_register') }}">
								{{'account.login'|trans}}</a></div>
						{% endif %}

						<div class="custom-select" style="width:200px;">
							
								<a class="dropdown-item" href="{{ path('program_index', {_locale: 'fr'}) }}"><img src="{{ asset('build/images/French.png')}}" width=30px height=30px > Français</a>
								
								<a class="dropdown-item" href="{{ path('program_index', {_locale: 'en'}) }}"><img src="{{ asset('build/images/English.png')}}" width=30px height=30px > English</a>
								
						</div>

						

					</div>
				</div>
				
			</nav>
		{% endblock %}


		{% for category, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ category }}">
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}


		{% block body %}{% endblock %}




		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

	</body>
</html>
