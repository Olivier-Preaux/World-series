<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}"/>
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>


	<body>

		{% block navbar %}

			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container-fluid">
					<a class="navbar-brand" href="#">WILDSERIES</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="{{ path('program_index') }}">
									Liste des programmes
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('actor_index') }}">Liste des acteurs</a>
							</li>

							<li class="nav-item dropdown"></li>

						</ul>
						<div class="blocLoginLogout">
							{% if app.user %}
								<a class="aregister" href="{{ path('user_profile', { 'id' : app.user.getId }) }}">
									Mon compte</a>
							</br>
							<a href="{{ path('app_logout') }}">
								Se d√©connecter</a>
						{% else %}
							<a class="aregister" href="{{ path('app_login') }}">
								Se connecter</a>
							<a class="senregistrer" href="{{ path('app_register') }}">
								S'enregistrer</a>
						{% endif %}
					</div>

				</div>
			</nav>
			
		</body>
	</html>

	{% for category, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ category }}">
				{{ message }}
			</div>
		{% endfor %}
	{% endfor %}
{% endblock %}
{% block body %}{% endblock %}</body>{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
{{ encore_entry_link_tags('app') }}{% endblock %}</html>
