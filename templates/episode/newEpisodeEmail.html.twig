{% extends '_email.html.twig' %}

{% block title %}Episode
{% endblock %}

{% block body %}
	{% apply inline_css %}

	<style>
		
		h1 {
			color: white;
			font-size: 40px;
		}


		.emailTitleEpisode {
			color: blue;
		}

		body {
			font-weight: bold;
			background-color: rgb(82, 81, 81);
        }
        
	</style>
{% endapply %}
</body>

<h1 class='emailTitleEpisode'>New episode
	{{ episode.title }}
	created</h1>
<p>Hello, the new program
	{{ episode.title }}
	has been created on Wild Series</p>
<p>Synopsis :
	{{ episode.synopsis }}


<img src="{{ email.image ('@images/image_series.jpg') }}" alt="ws">
</p>
</body>

{% endblock %}
