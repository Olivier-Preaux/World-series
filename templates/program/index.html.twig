{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Toutes les s√©ries  : </h1>

    <table class="index">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
               
                <th>Title</th>
                 <th>Slug</th>
                <th>Summary</th>
                {# <th>Poster</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
         
            <tr>
                <td>{{ loop.index }}</td>
                 <td><a href="{{ path('category_index') }}">{{ program.category.name }}</a></td>
               
               
                <td><a href="{{ path('program_show', { 'slug' : program.slug  } ) }}">{{ program.title }}</a></td>
                <td>{{ program.slug }}</td>
                <td>{{ program.summary }}</td>
                {# <td>{{ program.poster }}</td> #}
                <td>
                    
                    <a href="{{ path('program_edit', {'slug' : program.slug }) }}">edit</a>
                </td>
            </tr>
            
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class='centre'>

    <a href="{{ path('program_new') }}">Create new</a>
    </br>
    </div>
   
{% endblock %}
