{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Toutes les séries  : </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
               
                <th>Title</th>
                <th>Summary</th>
                {# <th>Poster</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
         
            <tr>
                <td>{{ loop.index }}</td>
                 <td><a href="{{ path('category_index') }}">{{ program.category.name }}</a></td>
               
               
                <td><a href="{{ path('program_show', { 'id': program.id } ) }}">{{ program.title }}</a></td>
                <td>{{ program.summary }}</td>
                {# <td>{{ program.poster }}</td> #}
                <td>
                    
                    <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>
                </td>
            </tr>
            
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('program_new') }}">Create new</a>
    </br>
    <a href="{{ path('program_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
