{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    

    <table class="table">
        <tbody>
            <tr>
                <th>Catégorie</th>
                <td>{{ program.category.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img src="{{ program.poster }}" width="250" /></td>
            </tr>             
        </tbody>
    </table>

    {% for season in seasons %}

    <h2><a href="{{ path('program_show_season' , { 'program_id' : program.id , 'season_id': season.id }) }}">Saisons : {{ season.number }}</a> - Année : {{ season.year }}</h2>Description :{{ season.description }}

    {% endfor %}

    <p><strong>Acteurs :</strong></p>
        <ul>
            {% for actor in program.actors %}
                <li><a href="{{ path('actor_show', { 'id': actor.id } ) }}">{{ actor.name }} </li>
            {% else %}
                <li>Aucun acteur pour cette série</li>
            {% endfor %}
        </ul>


    </br>
    <a href="{{ path('program_index') }}">back to list</a>

    <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
