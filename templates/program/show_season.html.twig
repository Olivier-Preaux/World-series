{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
<body><div class='containerPage'>
    <h1>Saison {{ season.number }}</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Numéro</th>
                <td> {{ season.number }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>
<h2>Les épisodes de la saison : </h2></br>
    {% for episode in episodes %}
    <a href="{{ path('program_show_episode', { 'program_slug' : program.slug , 'season_id': season.id , 'episode_slug': episode.slug }) }}">Episode {{ episode.number }} </a>: {{ episode.title }}</br>
    {% endfor %}
    </br>

  <div class='centre'> 
  
    <a href="{{ path('season_edit', {'id': season.id}) }}">Modifier</a>

    {{ include('season/_delete_form.html.twig') }}
    </div>
    </div>
</body>
{% endblock %}
